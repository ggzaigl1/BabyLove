<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="colorPrimary">@color/statusBar</item>    &lt;!&ndash; 状态栏 &ndash;&gt;-->
        <!--<item name="colorPrimaryDark">@color/appHeadBg</item> &lt;!&ndash; toolbar &ndash;&gt;-->
        <!--<item name="colorAccent">@color/colorAccent</item>  &lt;!&ndash; 重点 &ndash;&gt;-->
        <item name="windowActionBar">false</item><!-- 不显示标题栏 -->
        <item name="windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@color/white</item><!-- 背景 -->

        <!-- 避免启动应用后，出现短暂的黑屏或白屏现象 -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- 系统分割线 -->
        <item name="android:listDivider">@drawable/divider_bg</item>
        <item name="android:textAllCaps">false</item><!-- 所有字母是否大写 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Toast
        </item> <!--recreate 闪屏过渡动画-->

    </style>

    <!--AppBarLayout theme-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!--Toolbar popupTheme-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--AboutActivity Toolbar-->
    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_54</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>-->
    </style>

    <!-- dialog 样式 -->
    <style name="commonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--Login TextInputLayout -->
    <style name="LoginStyle">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Register TextInputLayout -->
    <style name="RegisterTextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">#FFCC00</item>
    </style>

    <!-- 使用android样式定制对话框。下一个提供自定义属性:
        DialogTitleAppearance:样式参考
        DialogTitleText:字符串
        DialogSpotColor:颜色
        DialogSpotCount:整数
        UpdateActivity
      -->
    <style name="DialogActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <!--CollapsingToolbarLayout 主题设置-->
    <style name="FullTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

</resources>
