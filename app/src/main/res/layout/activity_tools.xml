<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/switchCompatLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="gone"
            android:background="?android:attr/selectableItemBackground">

        <TextView
                style="@style/CommonText"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="SwitchCompat"/>

        <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchCompat"
                android:textColor="?attr/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/Ll_cache_clear"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="?android:attr/selectableItemBackground">

        <TextView
                style="@style/CommonText"
                android:layout_height="45dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/vector_cache_clear"
                android:padding="10dp"
                android:text="清空缓存"/>

        <TextView
                android:id="@+id/tv_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:textSize="14sp"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/selection"/>

    <TextView
            android:id="@+id/tv_praise"
            style="@style/CommonText"
            android:layout_height="45dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:drawableStart="@drawable/vector_praise"
            android:drawablePadding="10dp"
            android:text="给个好评"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/selection"/>

    <TextView
            android:id="@+id/bottomNavigation"
            style="@style/CommonText"
            android:layout_height="45dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:drawableStart="@drawable/vector_phone_utils"
            android:drawablePadding="10dp"
            android:visibility="gone"
            android:text="手机相关"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_12">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:textSize="15sp"
                android:text="@string/app_name"/>


        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

            <EditText
                    android:id="@+id/et_add_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:maxLength="18"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/myTxtColor"
                    android:textCursorDrawable="@null"
                    android:gravity="right|center_vertical"
                    />

            <TextView
                    android:id="@+id/tv_add_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/myTxtColor"
                    android:text="@string/app_name"/>
        </FrameLayout>


    </LinearLayout>

