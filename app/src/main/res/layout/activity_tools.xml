<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/Ll_tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/titleBarCon" />

        <LinearLayout
            android:id="@+id/Ll_cache_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableEnd="@drawable/vector_chevron_right_black"
                android:gravity="center_vertical"
                android:text="@string/clear_cache"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/textSize_medium_small" />

            <TextView
                android:id="@+id/tv_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/vector_chevron_right_black"
                android:gravity="center_vertical"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/titleBarCon" />

        <LinearLayout
            android:id="@+id/Ll_night_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableEnd="@drawable/vector_chevron_right_black"
                android:gravity="center_vertical"
                android:text="@string/nav_night"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/textSize_medium_small" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/titleBarCon" />

        <LinearLayout
            android:id="@+id/Ll_praise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableEnd="@drawable/vector_chevron_right_black"
                android:gravity="center_vertical"
                android:text="@string/to_evaluate"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/textSize_medium_small" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/titleBarCon" />

        <LinearLayout
            android:id="@+id/Ll_check_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableEnd="@drawable/vector_chevron_right_black"
                android:gravity="center_vertical"
                android:text="@string/check_update"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/textSize_medium_small" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/titleBarCon" />

        <LinearLayout
            android:id="@+id/Ll_check_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="測試"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/textSize_medium_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/vector_chevron_right_black"
                android:gravity="center_vertical"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/titleBarCon" />

