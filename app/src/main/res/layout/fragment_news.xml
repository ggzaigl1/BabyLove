<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/color_list"
        >

    <include
            android:id="@+id/statusView"
            layout="@layout/status_view" />

    <FrameLayout
            android:id="@+id/flHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <include layout="@layout/activity_head" />
    </FrameLayout>

    <Button
            android:id="@+id/bt_OnTraceList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="traceList"/>
    <Button
            android:id="@+id/bt_OnTrace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="traceList"/>
    <Button
            android:id="@+id/bt_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recycleview"/>


</LinearLayout>
