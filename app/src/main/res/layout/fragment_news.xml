<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/color_list">

    <include
            android:id="@+id/statusView"
            layout="@layout/status_view"/>

    <FrameLayout
            android:id="@+id/flHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <include layout="@layout/activity_head"/>
    </FrameLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_demo"/>

            <com.example.gab.babylove.widget.StateButton
                    android:id="@+id/bt_OnTraceList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="traceList"
                    android:textColor="@android:color/white"
                    app:normalBackgroundColor="@color/pink"
                    app:pressedBackgroundColor="@color/colorPrimaryDark"
                    app:radius="10dp"
                    app:unableBackgroundColor="@android:color/holo_red_light"/>

            <com.example.gab.babylove.widget.StateButton
                    android:id="@+id/bt_OnTrace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="traceList"
                    app:radius="5dp"
                    app:animationDuration="200"
                    app:normalStrokeColor="@android:color/white"
                    app:normalStrokeWidth="2dp"
                    app:normalTextColor="@android:color/white"
                    app:pressedBackgroundColor="@color/colorPrimaryDark"
                    app:pressedTextColor="@android:color/white"/>

            <com.example.gab.babylove.widget.StateButton
                    android:id="@+id/bt_recycleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="Recycleview"
                    android:textColor="@android:color/white"
                    app:normalBackgroundColor="@color/colorPrimary"
                    app:pressedBackgroundColor="@color/colorPrimaryDark"
                    app:round="true"
                    app:radius="2dp"
                    app:unableBackgroundColor="@android:color/holo_red_light"/>

            <com.example.gab.babylove.widget.StateButton
                    android:id="@+id/abo_Advice"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="center"
                    android:text="山丘之风"
                    android:textColor="@color/myTxtLight"
                    app:normalBackgroundColor="@color/white"
                    app:pressedBackgroundColor="@color/colorPrimaryDark"
                    app:round="true"
                    app:radius="2dp"
                    app:unableBackgroundColor="@android:color/holo_red_light"/>

            <com.example.gab.babylove.widget.StateButton
                    android:id="@+id/text_webView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="WebView"
                    app:normalBackgroundColor="@color/colorPrimary"
                    app:normalTextColor="@android:color/white"
                    app:pressedBackgroundColor="@color/colorPrimary"
                    app:pressedTextColor="@android:color/holo_red_light"
                    app:unableBackgroundColor="@color/colorPrimary"
                    app:unableTextColor="@android:color/holo_orange_dark"/>


            <com.example.gab.babylove.widget.StateButton
                    android:id="@+id/background_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="change background"
                    android:textColor="@android:color/white"
                    app:normalBackgroundColor="@color/textGreen"
                    app:pressedBackgroundColor="@color/colorPrimaryDark"
                    app:unableBackgroundColor="@android:color/holo_red_light"/>

            <com.example.gab.babylove.widget.StateButton
                    android:id="@+id/different_radius_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="different_radius"
                    android:textColor="@android:color/white"
                    app:normalBackgroundColor="@color/colorPrimary"
                    app:pressedBackgroundColor="@color/colorPrimaryDark"
                    app:unableBackgroundColor="@android:color/holo_red_light"/>

            <com.example.gab.babylove.widget.StateButton
                    android:id="@+id/dash_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="with dash"
                    app:radius="5dp"
                    app:strokeDashGap="5dp"
                    app:strokeDashWidth="5dp"
                    app:normalStrokeColor="@android:color/white"
                    app:normalStrokeWidth="2dp"
                    app:normalTextColor="@android:color/white"
                    app:pressedStrokeColor="@android:color/holo_red_light"
                    app:pressedStrokeWidth="2dp"
                    app:pressedTextColor="@android:color/holo_red_light"
                    app:unableStrokeColor="@android:color/holo_orange_dark"
                    app:unableStrokeWidth="2dp"
                    app:unableTextColor="@android:color/holo_orange_dark"/>

            <com.example.gab.babylove.widget.StateButton
                    android:id="@+id/stroke_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="with stroke"
                    app:radius="5dp"
                    app:normalStrokeColor="@android:color/white"
                    app:normalStrokeWidth="2dp"
                    app:normalTextColor="@android:color/white"
                    app:pressedStrokeColor="@android:color/holo_red_light"
                    app:pressedStrokeWidth="2dp"
                    app:pressedTextColor="@android:color/holo_red_light"
                    app:unableStrokeColor="@android:color/holo_orange_dark"
                    app:unableStrokeWidth="2dp"
                    app:unableTextColor="@android:color/holo_orange_dark"/>

            <com.example.gab.babylove.widget.StateButton
                    android:id="@+id/stroke_background_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="keep stroke"
                    app:radius="5dp"
                    app:normalStrokeColor="@android:color/white"
                    app:normalStrokeWidth="2dp"
                    app:normalTextColor="@android:color/white"
                    app:pressedStrokeWidth="2dp"
                    app:pressedStrokeColor="@android:color/white"
                    app:pressedBackgroundColor="@color/colorPrimaryDark"
                    app:pressedTextColor="@android:color/white"/>

            <com.example.gab.babylove.widget.StateButton
                    android:id="@+id/stroke_background_test2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="stroke_background"
                    app:radius="5dp"
                    app:normalStrokeColor="@android:color/white"
                    app:normalStrokeWidth="2dp"
                    app:normalTextColor="@android:color/white"
                    app:pressedBackgroundColor="@color/colorPrimaryDark"
                    app:pressedTextColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
