<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">


    <include
            android:id="@+id/statusView"
            layout="@layout/status_view"/>

    <FrameLayout
            android:id="@+id/flHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <include layout="@layout/activity_head"/>
    </FrameLayout>

    <HorizontalScrollView
            android:id="@+id/horizontal_view"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_baby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="大宝贝的专用库"
                android:padding="10dp"
                android:textColor="@color/myTxtColor"/>

    </HorizontalScrollView>

    <TextView
            android:id="@+id/tv_Os"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/myTxtColor"/>

    <TextView
            android:id="@+id/tv_ss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/myTxtColor"/>

    <Button
            android:id="@+id/bt_Dial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/bgColor"
            android:background="@drawable/button_selector"
            android:text="Dial"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvPatientList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/spacing_small_much"
                app:layout_type="content"/>

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:src="@android:drawable/ic_dialog_email"/>
    </LinearLayout>

</LinearLayout>