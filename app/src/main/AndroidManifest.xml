<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.gab.babylove">

    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.USE_FINGERPRINT"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 从SDCard读取数据权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- 用于访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission
            android:name="android.permission.READ_LOGS"
            tools:ignore="ProtectedPermissions"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission
            android:name="android.permission.WRITE_SETTINGS"
            tools:ignore="ProtectedPermissions"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:name=".MyApplication"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/BaseAppTheme">

        <!-- 欢迎 -->
        <activity
                android:name=".ui.main.login.StartUpActivity"
                android:screenOrientation="portrait"
                android:launchMode="singleTask"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".MainActivity"
                android:launchMode="singleTask"
                android:screenOrientation="portrait">
        </activity>

        <!-- 登录 -->
        <activity
                android:name=".ui.main.login.LoginActivity"
                android:label="@string/login"
                android:screenOrientation="portrait"/>
        <!-- 注册 -->
        <activity
                android:name=".ui.main.login.RegisterActivity"
                android:label="@string/registerTitle"
                android:screenOrientation="portrait"/>
        <!-- PhotoView -->
        <activity
                android:name=".ui.main.activity.PhotoViewActivity"
                android:screenOrientation="portrait"/>
        <!-- 工具 activity -->
        <activity
                android:name=".ui.main.activity.ToolsActivity"
                android:label="@string/tools"
                android:screenOrientation="portrait"/>
        <!-- 手機相關信息 -->
        <activity
                android:name=".ui.main.activity.PhoneUtilsActivity"
                android:label="@string/phone_system"
                android:screenOrientation="portrait"/>
        <!-- SelectorButton -->
        <activity
                android:name=".ui.main.activity.SelectorButtonActivity"
                android:label="@string/selector_button"
                android:screenOrientation="portrait"/>
        <!-- 美图欣赏 -->
        <activity
                android:name=".ui.main.activity.BelleActivity"
                android:label="@string/pretty_picture"
                android:screenOrientation="portrait"/>
        <!-- 美图欣赏 图片详情页 -->
        <activity
                android:name=".ui.main.activity.PictureDetailActivity"
                android:screenOrientation="portrait"/>
        <!-- Website 常用网站 -->
        <activity
                android:name=".ui.main.activity.WebsiteActivity"
                android:label="@string/website"
                android:screenOrientation="portrait"/>
        <!-- 知识体系 详情 -->
        <activity
                android:name=".ui.news.activity.SystemActivity"
                android:label="@string/knowledge"
                android:screenOrientation="portrait"/>
        <!-- AgentWeb -->
        <activity
                android:name=".web.AgentWebActivity"
                android:screenOrientation="portrait"/>
        <!-- 指紋相关工具类 -->
        <activity
                android:name=".ui.main.activity.FingerprintMainActivity"
                android:label="@string/fingerprint"
                android:screenOrientation="portrait"/>
        <!-- 关于我们 -->
        <activity
                android:name=".ui.main.activity.AboutActivity"
                android:label="@string/about_us"
                android:screenOrientation="portrait"/>
        <!-- 项目 -->
        <activity
                android:name=".ui.project.activity.ProjectActivity"
                android:label="@string/knowledge"
                android:screenOrientation="portrait"/>


        <!-- 相机Camera2 -->
        <activity
                android:name=".widget.camera.Camera2Activity"
                android:screenOrientation="portrait"/>
        <!-- 动画 -->
        <activity
                android:name=".ui.main.activity.AnimationActivity"
                android:screenOrientation="portrait"/>
        <!-- 不同格式文件浏览 activity -->
        <activity
                android:name=".ui.main.activity.FileBrowsingActivity"
                android:screenOrientation="portrait"/>

        <!-- WebView 相关 activity -->
        <!-- 8.0关于WebView的新特性 -->

        <activity
                android:name=".web.WebViewActivity"
                android:screenOrientation="portrait">
            <meta-data
                    android:name="android.webkit.WebView.EnableSafeBrowing"
                    android:value="true">
            </meta-data>
        </activity>
        <!-- 权限相关 -->
        <activity
                android:name="com.fy.baselibrary.utils.PermissionActivity"
                android:screenOrientation="portrait"
                android:theme="@style/NoTitleTranslucentTheme"/>
        <!-- SurfaceView+MediaPlayer 自定义播放器 -->
        <activity
                android:name=".widget.SurfaceActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:screenOrientation="sensor"
                android:windowSoftInputMode="stateHidden|adjustResize"/>

    </application>

</manifest>